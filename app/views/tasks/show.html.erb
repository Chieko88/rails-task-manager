<div class="container mt-3">
  <div class="d-flex justify-content-between align-items-center" >
    <h1><%= @task.title %></h1>
    <%= link_to 'Edit', edit_task_path, class: "btn btn-outline-info" %>
  </div>
  <div class="p-3 mb-2">
    <p><%= @task.details %></p>
    <% if @task.completed %>
      <div class="d-flex align-items-center">
        <i class="fa-regular fa-square-check me-2"></i>
        <p class="mt-3">This task is completed!</p>
      </div>
    <% else %>
      <div class="d-flex align-items-center">
        <i class="fa-regular fa-square me-2"></i>
        <p class="mt-3">This task is not completed...</p>
      </div>
    <% end %>
  </div>
  <div>
    <p><%= link_to 'Back to list', tasks_path  %></p>
  </div>
</div>
